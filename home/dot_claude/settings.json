{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "WebSearch",
      "WebFetch",
      "Bash(nr *)",
      "Bash(nlx *)",
      "Bash(na *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Bash(sudo *)",
      "Bash(rm -rf *)",
      "Bash(chmod 777 *)",
      "Bash(npm install -g *)",
      "Bash(git config *)",
      "Bash(gh repo delete:*)"
    ],
    "ask": [
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git rebase *)"
    ],
    "defaultMode": "acceptEdits"
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
