{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
    	"Read",
    	"Edit",
    	"WebSearch",
    	"WebFetch",
    	"Bash(nr *)",
    	"Bash(nlx *)",
    	"Bash(na *)"
    ],
    "ask": [
      "Bash(git commit *)",
      "Bash(git push *)",
      "Bash(git rebase *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Bash(sudo *)",
      "Bash(rm -rf *)",
      "Bash(chmod 777 *)",
      "Bash(npm install -g *)",
      "Bash(git config *)",
      "Bash(gh repo delete:*)"
    ]
  }
}
