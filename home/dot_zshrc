# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

export ZPLUG_HOME="$HOME/.zplug"

if [ -f "$ZPLUG_HOME/init.zsh" ]; then
  source "$ZPLUG_HOME/init.zsh"
fi


# plugins
if [ -n "$ZPLUG_HOME" ] && [ -f "$ZPLUG_HOME/init.zsh" ]; then
  zplug "zsh-users/zsh-autosuggestions"
  zplug "zsh-users/zsh-syntax-highlighting"
  zplug "marlonrichert/zsh-autocomplete"
  zplug "ohmyzsh/ohmyzsh", use:"plugins/git"
  zplug "ohmyzsh/ohmyzsh", use:"plugins/copypath"
  zplug "ohmyzsh/ohmyzsh", use:"plugins/copyfile"
  zplug "ohmyzsh/ohmyzsh", use:"plugins/docker"
  zplug "ohmyzsh/ohmyzsh", use:"plugins/mise"

  if ! zplug check --verbose; then
    zplug install
  fi
  zplug load
fi

snap_bin_path="/snap/bin"
if [ -n "${PATH##*${snap_bin_path}}" -a -n "${PATH##*${snap_bin_path}:*}" ]; then
    export PATH=$PATH:${snap_bin_path}
fi

# alias
alias cat="bat"
alias ls="exa --icons"
alias find="fd"

# yazi quick wrapper
function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

eval "$(~/.local/bin/mise activate zsh)"
eval "$(starship init zsh)"
